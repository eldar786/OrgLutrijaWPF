<UserControl x:Class="LutrijaWpfEF.UI.IzmijeniUplSrecki"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LutrijaWpfEF.UI"
             xmlns:validation="clr-namespace:LutrijaWpfEF.UI.Validation_Rules"
             xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextBoxControl"
             xmlns:vm="clr-namespace:LutrijaWpfEF.ViewModel;assembly=LutrijaWpfEF.ViewModel"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:IzmijeniUplSreckiDinoViewModel}">
            <local:IzmijeniUplSrecki/>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <Label x:Name="label" Content="Komitent(OP_BROJ_PROD)"></Label>

        <!--Ovdje ukljucujemo eksplicitno validaciju (stavimo na true), mada je ona po defaultu True-->
        <TextBox  Margin="0,10,5,0" FontWeight="Bold" VerticalAlignment="Bottom" Width="300" FontSize="18" Name="KomitentImePrez">
            <TextBox.Text>
                <Binding Path="OdabranaUplSrecki.OP_BROJ" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <validation:NoBlankRule NulaDozovljena="False" ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <TextBox.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding KomitentiCommand}" />
            </TextBox.InputBindings>

        </TextBox>

        <!--<Label x:Name="label1" Content="Opis"></Label>-->
        <!--<TextBox x:Name="opisTxtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Margin="0,0,0,10">
            <TextBox.Text>
                <Binding Path="OdabranaUplSrecki.OPIS"  ValidatesOnExceptions="True" 
             UpdateSourceTrigger="PropertyChanged" 
             ValidatesOnDataErrors="True"
                         >
                    <Binding.ValidationRules>
                        <validation:NotEmptyStringValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>-->
        <Label x:Name="label2" Content="Datum"></Label>
        <DatePicker SelectedDate="{Binding OdabranaUplSrecki.DATUM, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" x:Name="datumTxtBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="250" Margin="0,0,0,10" ></DatePicker>
        <Label x:Name="labelOpstina" Content="OPSTINA"></Label>
        
        <TextBox x:Name="opcinaTxtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Margin="0,0,0,20">
            <TextBox.Text>
                <Binding Path="OdabranaUplSrecki.OPSTINA"  ValidatesOnExceptions="True" 
             UpdateSourceTrigger="PropertyChanged" 
             ValidatesOnDataErrors="True">
                    <Binding.ValidationRules>
                        <validation:NotEmptyStringValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <TextBox.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding OpstinaCommand}" />
            </TextBox.InputBindings>
        </TextBox>
        
        <Label x:Name="label3" Content="Iznos"></Label>
        <currency:CurrencyTextBox Number="{Binding OdabranaUplSrecki.UPL}" x:Name="IznosTxtBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="250" Margin="0,0,0,10" Language="bs-Ba" />

        <Label x:Name="label4" Content="IGRA"></Label>
        <ComboBox x:Name="combobox" ItemsSource="{Binding SveIgre}" SelectedItem="{Binding Igra}" Grid.Column="1" Grid.Row="2" Height="38"  FontSize="18">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NAZIV}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label x:Name="label5" Content="KOLO"></Label>
        <TextBox x:Name="koloTxtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Margin="0,0,0,20">
            <TextBox.Text>
                <Binding Path="OdabranaUplSrecki.RED_KOLO"  ValidatesOnExceptions="True" 
             UpdateSourceTrigger="PropertyChanged" 
             ValidatesOnDataErrors="True">
                    <Binding.ValidationRules>
                        <validation:NotEmptyStringValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <Label x:Name="label6" Content="SERIJA"></Label>
        <TextBox x:Name="serijaTxtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Margin="0,0,0,20">
            <TextBox.Text>
                <!--<Binding Path="OdabranaUplSrecki.SRECKA"  ValidatesOnExceptions="True"-->

                <Binding Path="OdabranaSerijaSrecke"  ValidatesOnExceptions="True"
             UpdateSourceTrigger="PropertyChanged" 
             ValidatesOnDataErrors="True">
                    <Binding.ValidationRules>
                        <validation:NotEmptyStringValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>

                <!--<MultiBinding StringFormat="{}{0} + {1}">
                    <Binding Path="OdabranaSerijaSrecke" />
                    <Binding Path="OdabranaUplSrecki.SRECKA" />
                </MultiBinding>-->

            </TextBox.Text>
        </TextBox>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding SpasiCommand}"   x:Name="button" Content="Spasi" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" >
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                        <Setter Property="IsEnabled" Value="False"/>

                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=KomitentImePrez}" Value="False"/>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=koloTxtBox}" Value="False"/>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=serijaTxtBox}" Value="False"/>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=opcinaTxtBox}" Value="False"/>
                                    <!--<Condition Binding="{Binding Path=(Validation.HasError), ElementName=combobox}" Value="False"/>-->
                                </MultiDataTrigger.Conditions>
                                <Setter Property="IsEnabled" Value="True"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Command="{Binding OdustaniCommand}" x:Name="button2" Content="Odustani" Margin="20,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" />
        </StackPanel>
    </StackPanel>
</UserControl>
